<?xml version="1.0" ?>
<robot name="scitosA5" 
       xmlns:controller="http://playerstage.sourceforge.net/gazebo/xmlschema/#controller"
       xmlns:interface="http://playerstage.sourceforge.net/gazebo/xmlschema/#interface" 
       xmlns:joint="http://playerstage.sourceforge.net/gazebo/xmlschema/#slider" 
       xmlns:sensor="http://playerstage.sourceforge.net/gazebo/xmlschema/#sensor"
       xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- calibration data -->
  <include filename="$(find scitos_description)/urdf/scitos_calibration.xacro" />

  <!-- materials -->
  <material name="Red">
    <color rgba="0.8 0.0 0.0 1.0"/>
  </material>
  <material name="Black">
    <color rgba="0.02 0.02 0.02 1.0"/>
  </material>
  <material name="Aluminium">
    <color rgba="0.65 0.65 0.65 1.0"/>
  </material>

  <!-- base_footprint : a fictional link that is on the floor plane, needed for move_base -->
  <link name="base_footprint">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0 0 0"/> 
      </geometry>
      <material name="Red"/>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <box size="0 0 0"/>
      </geometry>
    </collision>
  </link>

  <!-- Base link is the actual robot body -->
  <link name="base_link">
    <inertial>
      <mass value="74.5"/>
      <origin xyz="-0.061 0.0 0.1465"/>
      <inertia ixx="5.652232699207" ixy="-0.009719934438" ixz="1.293988226423" iyy="5.669473158652" iyz="-0.007379583694" izz="3.683196351726"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
	<mesh filename="package://scitos_description/meshes/scitos.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.3"/>
      <geometry>
        <cylinder length="0.6" radius="0.2"/>
      </geometry>
    </collision>
  </link>


  <!-- Base footprint -> base_link -->
  <joint name="base_footprint_joint" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0.021"/>
    <parent link="base_footprint"/>
    <child link="base_link"/>
  </joint>

  <!-- base_link -> base_laser_link -->
  <joint name="base_laser_joint" type="fixed">
    <axis xyz="0 1 0"/>
    <origin rpy="${front_laser_scan_rot_x} ${front_laser_scan_rot_y} ${front_laser_scan_rot_z}" 
	    xyz="${front_laser_scan_trans_x} ${front_laser_scan_trans_y} ${front_laser_scan_trans_z}"  />
    <parent link="base_link"/>
    <child link="base_laser_link"/>
  </joint>


  <!-- the laser -->
  <link name="base_laser_link" type="laser">
    <inertial>
      <mass value="0.001"/>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.075"/>
      <geometry>
	<cylinder length="0.15" radius="0.04"/>
      </geometry>
    </visual>
  </link>

  <!-- Pan-Tilt lower motor -->
  <link name="ptu_pan_motor">
    <inertial>
      <mass value="1"/>
      <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100"/>
      <origin/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<mesh filename="package://scitos_description/meshes/pantil0_1.dae"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <origin xyz="0 0.015 0"/>
      <geometry>  
        <box size="0.04 .07 .05"/>
      </geometry>
    </collision>
  </link>

  <!-- base_link -> pantilt -->
  <joint name="pantilt_joint" type="fixed">
    <origin rpy="${pan_tilt_base_plate_rot_x} ${pan_tilt_base_plate_rot_y} ${pan_tilt_base_plate_rot_z}" 
	    xyz="${pan_tilt_base_plate_trans_x} ${pan_tilt_base_plate_trans_y} ${pan_tilt_base_plate_trans_z}"/>
    <parent link="base_link"/>
    <child link="ptu_pan_motor"/>
  </joint>

  <!-- pantilt upper motor -->
  <link name="ptu_tilt_motor">
    <inertial>
      <mass value="1"/>
      <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100"/>
      <origin/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<mesh filename="package://scitos_description/meshes/pantil1_1.dae"/>
      </geometry>
      <material name="Black"/>
    </visual>
    <collision>
      <origin/>
      <geometry>
        <box size="0.04 .04 .06"/>
      </geometry>
    </collision>
  </link>

  <!-- pan joint -->
  <joint name="pan" type="continuous">
    <origin xyz="0 0 0.04572" rpy="1.57 0 0"/>
    <axis xyz="0 1 0"/>
    <parent link="ptu_pan_motor"/>
    <child link="ptu_tilt_motor"/>
  </joint>


  <!-- the top pantilt hinge bracket that joints the tilt motor to the aluminium plate -->
  <link name="ptu_hinge">
    <inertial>
      <mass value="1"/>
      <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100"/>
      <origin/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<mesh filename="package://scitos_description/meshes/pantil2_1.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin/>
      <geometry>
        <box size=" .03 .27 .004"/>
      </geometry>
    </collision>
  </link>


  <!-- tilt joint -->
  <joint name="tilt" type="continuous">
    <origin xyz="0 0.045974 0" rpy="-1.57 0 0"/>
    <axis xyz="0 1 0"/>
    <parent link="ptu_tilt_motor"/>
    <child link="ptu_hinge"/>
  </joint>


  <!-- ptu_mount: the top aluminium plate on the ptu unit -->
  <link name="ptu_mount">
    <inertial>
      <mass value="1"/>
      <inertia ixx="100" ixy="0" ixz="0" iyy="100" iyz="0" izz="100"/>
      <origin/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
	<mesh filename="package://scitos_description/meshes/pantil3_1.dae"/>
      </geometry>
      <material name="Aluminium"/>
    </visual>
    <collision>
      <origin/>
      <geometry>
        <box size=" .03 .27 .004"/>
      </geometry>
    </collision>
  </link>

  <!-- ptu_hing -> ptu_mount -->
  <joint name="hinge_to_mount" type="fixed">
    <origin xyz="0 0 0.039116" rpy="0 0 0"/>
    <parent link="ptu_hinge"/>
    <child link="ptu_mount"/>
  </joint>

  <!-- xtion camera on head -->
  <link name="head_xtion_link">
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
    </inertial>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://scitos_description/meshes/xtion.dae"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 0.071"/>
      <geometry>
        <box size="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <!-- ptu plate -> xtion -->
  <joint name="head_xtion_joint" type="fixed" >
    <origin rpy="${head_xtion_rot_x} ${head_xtion_rot_y} ${head_xtion_rot_z}" 
	    xyz="${head_xtion_trans_x} ${head_xtion_trans_y} ${head_xtion_trans_z}" />
    <axis xyz="0 0 1"/>
    <parent link="ptu_mount"/>
    <child link="head_xtion_link"/>
  </joint>

</robot>
